@model List<FrontEnd.Models.ShipperViewModel>

@{
    ViewData["Title"] = "Shippers";
}

<h2>Shippers</h2>
<a asp-action="Create" class="btn btn-primary">Create New</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Company Name</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ShipperId</td>
                <td>@item.CompanyName</td>
                <td>@item.Phone</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ShipperId" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.ShipperId" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ShipperId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
